<p id="notice"><%= notice %></p>

<h1>Replicas</h1>

<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>Type</th>
      <th>Timeout</th>
      <th>Phrase</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replicas.each do |replica| %>
      <tr>
        <td><%= replica.position %></td>
        <td><%= replica.kind %></td>
        <td><%= replica.timeout %></td>
        <td><%= replica.phrase %></td>
        <td><%= replica.image %></td>
        <td><%= link_to 'Show', replica %></td>
        <td><%= link_to 'Edit', edit_replica_path(replica) %></td>
        <td><%= link_to 'Destroy', replica, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

